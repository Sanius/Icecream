{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "baseUrl": "./packages/",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@icecream/storefront/*": ["./storefront/src/*"],
      "@icecream/backoffice/*": ["./backoffice/src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
